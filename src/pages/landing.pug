//- mixins
include ../mixins/checkbox
include ../mixins/modal

h1.title 中國象棋

#subheader
  #currentLevel 電腦水平：入門
  .button-group
    +modal(id='effectSettings')
      +slot('title').
        遊戲設定

      +slot('body')
        #gameOptions
          +checkbox(id="animatedCheckbox" label="開啟行棋動畫")
          +checkbox(id="soundEnabledCheckbox" label="開啟遊戲音效")

      +slot('okText').
        儲存
      +slot('cancelText').
        取消

    +modal(id='chessboardSettings')
      +slot('title').
        棋局設定

      +slot('body')
        .fieldset
          .field
            .field-label 誰先走
            select.select(id="moveModeSelect" size="4")
              option(selected value="0") 我先走
              option(value="1") 電腦先走
              option(value="2") 不用電腦

          .field
            .field-label 先走讓子
            select.select(id="handicapSelect" size="4")
              option(selected value="0") 不讓子
              option(value="1") 讓左馬
              option(value="2") 讓雙馬
              option(value="3") 讓九子

          .field
            .field-label 電腦水平
            select.select(id="levelSelect" size="4")
              option(selected value="0") 入門
              option(value="1") 業餘
              option(value="2") 專業

      +slot('okText').
        儲存設定並重新開始
      +slot('cancelText').
        取消

#main
  #responsiveContainer
    #chessboard

  #controls
    button.button.button--plain(id="retractButton") 悔棋
    button.button.button--plain(id="restartButton") 重新開始

  h2.subtitle
    span 行棋記錄

  select.select(id="moveListSelect" size="10")
    option(selected value="0") === 開始 ===
